                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'l')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'l')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'L')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'M')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'm')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'm')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'M')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'N')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'n')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'n')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'N')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'O')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'o')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'o')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'O')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'P')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'p')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'p')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'P')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'Q')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'q')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'q')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'Q')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'R')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'r')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'r')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'R')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'S')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 's')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 's')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'S')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'T')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 't')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 't')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'T')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'U')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'u')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'u')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'U')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'V')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'v')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'v')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'V')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'W')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'w')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'w')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'W')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'X')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'x')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'x')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'X')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'Y')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'y')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'y')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'Y')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
