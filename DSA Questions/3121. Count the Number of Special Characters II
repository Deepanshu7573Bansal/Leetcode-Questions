class Solution
{
public:
    int numberOfSpecialChars(string word)
    {
        int count = 0, flag = 0;

        for (int i = 0; i < word.length(); i++)
        {
            flag = 0;
            if (word[i] == 'A')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'a')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'a')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'A')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'B')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'b')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'b')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'B')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'C')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'c')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'c')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'C')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'D')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'd')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'd')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'D')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'E')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'e')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'e')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'E')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'F')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'f')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'f')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'F')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'G')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'g')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'g')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'G')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'H')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'h')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'h')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'H')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'I')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'i')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'i')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'I')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'J')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'j')
                    {
                        flag = 1;
                        word[j] = '-';
                    }
                }
                for (int j = i + 1; j < word.length(); j++)
                {
                    if (word[j] == 'j')
                    {
                        flag = 0;
                        word[j] = '-';
                    }
                    if (word[j] == 'J')
                    {
                        word[j] = '-';
                    }
                }
                if (flag == 1)
                {
                    count++;
                    flag = 0;
                }
            }
            else if (word[i] == 'K')
            {
                word[i] = '-';
                for (int j = 0; j < i; j++)
                {
                    if (word[j] == 'k')
                    {
                        flag = 1;
                        word[j] = '-';
